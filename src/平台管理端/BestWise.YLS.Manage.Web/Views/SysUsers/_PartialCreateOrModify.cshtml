@model BestWise.User.Model.Users
@using BestWise.YLS.Model.Enums
@{
    ViewBag.Title = "用户管理";
}
<script type="text/javascript">
    $("#RoleId").combobox({
        url: '/SysRole/ComboBox',
        valueField: 'RoleId',
        textField: 'RoleName',
        required: true,
        method: 'post',
        editable: false
    });
</script>
<div class="easyui-panel" data-options="fit:true,border:false;" style="padding:10px;">
    <form id="form-detail" method="post">
        <table class="tabdetail">
            <tr>
                <td class="tdtitle"><i>*</i>用户名称：</td>
                @{
                    if (Model!=null && Model.UserId != Guid.Empty)
                    {
                        <td>
                            <span style="color:gray;font-weight:bold;">@Model.UserName</span>
                            @Html.HiddenFor(m => m.UserName)
                        </td>
                    }
                    else
                    {
                        <td>@Html.TextBoxFor(m => m.UserName, new { @class = "detailinput easyui-validatebox", data_options = "required:true", placeholder = "用户名称" })</td>
                    }
                }
            </tr>
            <tr>
                <td class="tdtitle">用户昵称：</td>
                <td>@Html.TextBoxFor(m => m.NickName, new { @class = "detailinput easyui-validatebox", placeholder = "用户昵称" })</td>
            </tr>
            @{
                if (Model!=null && Model.UserId == Guid.Empty)
                {
                    <tr>
                        <td class="tdtitle"><i>*</i>密码：</td>
                        <td>@Html.TextBoxFor(m => m.Password, new { @class = "detailinput easyui-validatebox", data_options = "required:true", placeholder = "用户密码" })</td>
                    </tr>
                }
                else
                {
                    @Html.HiddenFor(m => m.Password)
                }
            }
            <tr>
                <td class="tdtitle"><i>*</i>性别：</td>
                <td>@Html.DropDownListFor(m => m.Sex, ViewBag.Gender as SelectList, new { @class = "combo", placeholder = "性别" })</td>
            </tr>
            <tr>
                <td class="tdtitle"><i>*</i>角色：</td>
                <td>@Html.TextBox("RoleId", string.Equals(Model.RoleId, 0) ? string.Empty : Model.RoleId.ToString(), new { style = "width:300px;height:25px;", placeholder = "角色" })</td>
            </tr>
            <tr>
                <td class="tdtitle">部门：</td>
                <td>@Html.TextBoxFor(m => m.Department, new { @class = "detailinput easyui-validatebox", placeholder = "部门" })</td>
            </tr>
            <tr>
                <td class="tdtitle">邮箱：</td>
                <td>@Html.TextBoxFor(m => m.Email, new { @class = "detailinput easyui-validatebox", placeholder = "邮箱" })</td>
            </tr>
            <tr>
                <td class="tdtitle">手机号码：</td>
                <td>@Html.TextBoxFor(m => m.MobileNumber, new { @class = "detailinput easyui-validatebox", placeholder = "手机号码" })</td>
            </tr>
            <tr>
                <td class="tdtitle">电话号码：</td>
                <td>@Html.TextBoxFor(m => m.PhoneNumber, new { @class = "detailinput easyui-validatebox", placeholder = "电话号码" })</td>
            </tr>
            <tr>
                <td class="tdtitle">邮编：</td>
                <td>@Html.TextBoxFor(m => m.ZipCode, new { @class = "detailinput easyui-validatebox", placeholder = "电话号码" })</td>
            </tr>
            <tr>
                <td class="tdtitle">备注：</td>
                <td>@Html.TextAreaFor(o => o.Notes, new { @class = "detailtextArea", placeholder = "备注" })</td>
            </tr>
        </table>
        @Html.HiddenFor(m => m.UserId)
    </form>
</div>